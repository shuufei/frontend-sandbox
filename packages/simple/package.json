{
  "name": "@sandbox-frontend/simple",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "scripts": {
    "test": "node ./dist/index.js",
    "build": "tsc index.ts --declaration --outDir ./dist"
  },
  "nx": {
    "namedInputs": {
      "default": [
        "{projectRoot}/**/*"
      ]
    },
    "targets": {
      "build": {
        "inputs": ["default"],
        "outputs": ["dist/simple"]
      },
      "test": {
        "inputs": ["default"],
        "dependsOn": ["build"]
      }
    }
  }
}
